# Database
DATABASE_URL="postgresql://vocalbridge:vocalbridge_dev@localhost:5432/vocalbridge?schema=public"

# Server
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# Logging
LOG_LEVEL=info

# API Key generation
API_KEY_PREFIX=vb_live_

# Voice Configuration
# Mode: 'browser' (client-side STT/TTS) or 'mock' (server-side mock)
VOICE_MODE=mock

# Audio Storage
# Directory for storing audio files (optional, defaults to ./data/audio)
# AUDIO_STORAGE_DIR=

# Database Connection Pool
DB_POOL_SIZE=25
DB_POOL_TIMEOUT=10
DB_CONNECTION_TIMEOUT=5
DB_STATEMENT_TIMEOUT=30000
